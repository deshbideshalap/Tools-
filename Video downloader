      <input type="url" id="videoUrl" class="w-full p-2 border rounded" placeholder="https://youtube.com/...">
      
      <!-- Quality Selection -->
      <label class="block mt-4 font-semibold">ভিডিও কোয়ালিটি:</label>
      <select id="quality" class="w-full p-2 border rounded">
        <option value="360p">360p</option>
        <option value="720p" selected>720p</option>
        <option value="1080p">1080p</option>

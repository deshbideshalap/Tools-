  <!-- Script -->
  <script>
    function handleDownload() {
      const url = document.getElementById("videoUrl").value.trim();
      const quality = document.getElementById("quality").value;
      const result = document.getElementById("result");

      if (!url) {
        result.innerHTML = "<p class='text-red-600 mt-4'>দয়া করে একটি ভিডিও URL প্রদান করুন।</p>";
        return;
      }

      // এটি একটি মক ডাউনলোড URL — বাস্তব API দিয়ে প্রতিস্থাপন করুন
      result.innerHTML = `
        <div class="mt-4 bg-green-100 border border-green-400 text-green-800 p-4 rounded">
          <p><strong>ডাউনলোড প্রস্তুত:</strong> ${quality} কোয়ালিটি</p>
          <a href="#" class="text-blue-700 underline">এখানে ক্লিক করে ডাউনলোড করুন</a>
        </div>
      `;
    }
  </script>

